@model wedduykhanh.Models.LoginModels
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationMessage("Register", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />


    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Pass, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Pass, new { @class = "form-control" })
            @*@Html.ValidationMessageFor(m => m.Pass, "", new { @class = "text-danger" })*@
            <h6> @ViewBag.Error</h6>
        </div>

    </div>

   
    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">

            <input type="submit" class="btn btn-success" value="Đăng nhập" />
         
                <a class="btn btn-success" href=@Url.Action("Register","User")>Đăng ký</a>
            
        </div>

    </div>

}
